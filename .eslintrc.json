{
  "extends": ["next/core-web-vitals", "next", "eslint:recommended"],
  "rules": {
    "no-unused-vars": "warn" // or "@typescript-eslint/no-unused-vars": "off"
  },
  "parserOptions": {
    "project": "./tsconfig.json",
    "tsconfigRootDir": "./"
  },
  "overrides": [
    {
      "files": ["*.ts", "*.mts", "*.cts", "*.tsx"],
      "rules": {
        "no-undef": "off"
      }
    }
  ]
}
